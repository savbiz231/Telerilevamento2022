\section{Obiettivi}

\begin{frame}{Obiettivo del progetto}
\begin{itemize}
\item  Osservare il cambiamento del paesaggio e dei valori di NDVI in funzione alla costruzione della diga di Alqueva, in Portogallo, avvenuta nel 2002
\end{itemize}
\end{frame}

\section{Inquadramento}

\begin{frame}{Inquadramento geografico}
    \includegraphics[width=1\textwidth]{Areadistudio.jpg}
\begin{figure}
        \centering
        \includegraphics[width=0.5\linewidth]{Areadistudio.jpg}
        \caption{Enter Caption}
        \label{fig:enter-label}
    \end{figure}
    \centering
\begin{itemize}
    \item Immagine area di studio. Fonte: Google Earth.
\end{itemize}
\end{frame}


\section{Metodi}

\begin{frame}{Metodi di analisi}
\begin{itemize}
    \item Importazione delle immagini Landsat 7 ETM+ e 8 OLI in Natural Colors (Bands: 4,3,2)
    
    \bigskip
    
    \item Produzione di mappe NDVI 
    
    \bigskip
    
    \item Calcolo differenza NDVI nelle immagini prodotte
    
    \bigskip

\end{itemize}    
\end{frame}

